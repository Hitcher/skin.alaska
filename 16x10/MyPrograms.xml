							<width>500</width>
							<height>188</height>
							<align>center</align>
							<info>ListItem.Label2</info>
							<font>Font_Black_Caps_76</font>
							<autoscroll>false</autoscroll>
							<textcolor>Medium</textcolor>
						</control>
