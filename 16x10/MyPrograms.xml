				<height>524</height>
				<onup>500</onup>
				<ondown>500</ondown>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<viewtype>list</viewtype>
				<focusposition>4</focusposition>
				<orientation>horizontal</orientation>
				<defaultcontrol always="true">1</defaultcontrol>
				<scrolltime tween="sine" easing="out">320</scrolltime>
