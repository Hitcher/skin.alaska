					<item id="3">
						<onclick>SendClick(3)</onclick>
						<label>31110</label>
						<label2>$INFO[Container.SortMethod]</label2>
						<visible>Control.IsEnabled(3)</visible>
					</item>
					<!-- Order by -->
					<item id="4">
						<onclick>SendClick(4)</onclick>
						<label>31111</label>
						<label2>$INFO[Control.GetLabel(4)]</label2>
