<?xml version="1.0" encoding="UTF-8"?>
<window id="136">
	<zorder>2</zorder>

	<controls>

		<control type="group">
			<right>0</right>
			<top>-134</top>
			<width>910</width>
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,0" end="0,180" time="400" tween="cubic" easing="out" />
				<effect type="fade" start="0" end="100" time="400" />
			</animation>
			<animation type="Conditional" condition="Window.IsVisible(fullscreeninfo) | Window.IsVisible(seekbar) | [Window.IsVisible(visualisation) + Player.ShowInfo]" reversible="true">
				<effect type="slide" start="0,0" end="0,95" time="400" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="100" />
			</animation>
			<animation type="Conditional" condition="Window.IsVisible(infodialog)">
				<effect type="fade" start="100" end="0" time="0" />
			</animation>

			<!-- Heading -->

			<control type="label">
				<right>135</right>
				<top>6</top>
				<width>775</width>
				<height>30</height>
				<align>right</align>
				<font>Font_Black_Caps_30</font>
				<textcolor>$VAR[DialogHeadingValue]</textcolor>
				<label>$VAR[Busy_Label]</label>
			</control>

			<!-- Details -->

			<control type="label">
				<right>135</right>
				<top>36</top>
				<width>775</width>
				<height>30</height>
				<align>right</align>
				<scroll>true</scroll>
				<font>Font_Light_Caps_30</font>
				<textcolor>$VAR[DialogDetailsValue]</textcolor>
				<label>20186</label>
			</control>

			<!-- Busy -->

			<control type="group">

				<!-- Background image -->

				<control type="image">
					<left>792</left>
					<top>0</top>
					<width>75</width>
					<height>75</height>
					<texture>dialogs/Dialog_Background.png</texture>
				</control>

				<!-- Busy image -->

				<control type="image">
					<left>792</left>
					<top>0</top>
					<width>75</width>
					<height>75</height>
					<texture>dialogs/Busy.png</texture>
					<animation effect="rotate" start="360" end="0" center="auto" time="1200" loop="true" condition="true">conditional</animation>
				</control>

			</control>

		</control>

	</controls>

</window>