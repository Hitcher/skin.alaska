<?xml version="1.0" encoding="UTF-8"?>
<window id="100">
	<defaultcontrol always="true">10</defaultcontrol>
	<coordinates>
		<origin x="0" y="0"/>
	</coordinates>

	<controls>

		<!-- Default controls (hidden) -->

		<control type="button" id="10">
			<include>HiddenControl</include>
			<label>106</label>
			<onclick>Close</onclick>
		</control>

		<!-- Filter -->

		<include>Global_DialogFilter</include>

		<!-- Details -->

		<control type="group" id="5000">
			<top>TopOffset</top>
			<left>LeftOffset</left>
			<include>Animation_ZoomInMenu</include>
			<animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(DialogYesNo.xml) | Window.IsActive(okdialog)">
				<effect type="fade" start="100" end="0" time="200" />
			</animation>

			<control type="grouplist">
				<left>260</left>
				<top>340</top>
				<width>1400</width>
				<height>400</height>
				<itemgap>8</itemgap>
				<align>center</align>
				<orientation>vertical</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<!-- Heading -->

				<control type="label" id="1">
					<width>1400</width>
					<height>42</height>
					<align>center</align>
					<font>Font_Black_Caps_42</font>
					<textcolor>MedLight</textcolor>
				</control>

				<control type="label">
					<!-- Spacer -->
					<width>1400</width>
					<height>8</height>
				</control>

				<control type="textbox" id="9">
					<width>1400</width>
					<height>auto</height>
					<align>center</align>
					<font>Font_Light_Caps_36</font>
					<textcolor>Medium</textcolor>
				</control>

				<control type="label">
					<!-- Spacer -->
					<width>1400</width>
					<height>8</height>
					<visible>Control.IsVisible(9)</visible>
				</control>

				<control type="image">
					<left>399</left>
					<width>602</width>
					<height>44</height>
					<texture border="24,0,24,0">osd/Progress.png</texture>
					<visible>Control.IsVisible(20)</visible>
				</control>

				<control type="progress" id="20">
					<left>410</left>
					<top>-50</top>
					<width>580</width>
					<height>44</height>
					<texturebg>-</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture border="10">osd/Progress_Bar.png</midtexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
					<info>System.Progressbar</info>
				</control>

				<control type="label">
					<!-- Spacer -->
					<width>1400</width>
					<height>8</height>
				</control>

				<!-- Menu -->

				<control type="grouplist">
					<width>1400</width>
					<height>76</height>
					<itemgap>0</itemgap>
					<align>center</align>
					<orientation>horizontal</orientation>
					<scrolltime tween="sine" easing="out">320</scrolltime>

					<!-- Cancel -->

					<control type="label">
						<include>DialogMenuValue</include>
						<label>$INFO[Control.GetLabel(10)]</label>
						<visible>Control.IsVisible(10)</visible>
						<animation type="conditional" condition="!Control.HasFocus(10)">
							<effect type="zoom" center="auto" start="100" end="70" time="200" tween="cubic" easing="in" />
							<effect type="fade" start="100" end="50" time="200" />
						</animation>
					</control>

				</control>

			</control>

		</control>

	</controls>

</window>