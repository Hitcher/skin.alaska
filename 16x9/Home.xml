	<controls>

		<!-- Hidden control to load weather conditions -->

		<control type="label">
			<font>-</font>
			<label>$INFO[Weather.Conditions]</label>
		</control>

		<!-- Background -->

		<include>Global_Background</include>

		<!-- Reboot message to build main menu -->

		<control type="label">
			<centerleft>CenterX</centerleft>
			<centertop>CenterY</centertop>
			<width>1920</width>
			<height>1080</height>
			<align>center</align>
			<font>Font_Reg_54</font>
			<label>Please reboot XBMC to build main menu.</label>
			<visible>![Skin.HasSetting(HomeIcon) | Skin.HasSetting(HomeHorizontal)] + IsEmpty(Window(home).Property(GroupLabel3))</visible>
		</control>

		<!-- Home layouts -->

		<include condition="![Skin.HasSetting(HomeIcon) | Skin.HasSetting(HomeHorizontal)]">HomeDefault</include>
		<include condition="Skin.HasSetting(HomeIcon)">HomeIcon</include>
		<include condition="Skin.HasSetting(HomeHorizontal)">HomeList</include>

